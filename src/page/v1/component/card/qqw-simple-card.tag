<qqw-simple-card>
	<section class="qqw-simple-card-layout" id="qqwSimpleCardSection">
		<a class="{ simple-card-item-container: true, simple-card-item-container--fix: odd }" each="{ opts.column }" href="{ url }">
			<p class="simple-card-item-container-bg"></p>
			<p class="simple-card-item-name">{ name }</p>
			<p class="simple-card-item-tip">{ minPrice }</p>
		</a>
	</section>
</qqw-simple-card>